<% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<%= form_with model: @user, url: user_path do |form| %>
    <%=label(:user, :username, "Your username :", value: "test")%>
    <%= form.text_field :username %><br />
    <%= form.label :password %>:
    <%= form.password_field :password %><br />
    <%= form.label :email %>:
    <%= form.email_field :email, placeholder: "a@gmail.com"%><br />
    <%= form.submit "Submit" %>
  <% end %>